generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Permissao {
  DEV
  ADM
  USR
}

model Usuario {
  id            String        @id @default(uuid())
  nome          String
  email         String        @unique
  login         String        @unique
  aniversario   String?
  cargo         String?
  telefone      String?
  setorId       String?
  permissao     Permissao     @default(USR)
  andar         String?
  ramal         String?

  criadoEm      DateTime      @default(now())
  atualizadoEm  DateTime      @default(now()) @updatedAt

  setor         Setor?        @relation(fields: [setorId], references: [id])

  @@map("usuarios")
}

model Setor {
  id            String        @id @default(uuid())
  nome          String

  usuarios      Usuario[]

  @@map("setores")
}

model GrupoRamal {
  id            String      @id @default(uuid())
  usuario       String      @unique
  ramalGrupo    String

  @@map("gruporamais")
}